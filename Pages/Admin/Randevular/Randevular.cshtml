@page
@model web.Pages.Admin.RandevularModel
@{
    ViewData["Title"] = "Randevu Talepleri";
    Layout = "_Layout"; // Admin layoutunuz varsa onu kullanın
}

<div class="container mt-4">
    <h2 class="mb-4">Bekleyen Randevu Talepleri</h2>

    @if (Model.BekleyenRandevular.Count == 0)
    {
        <div class="alert alert-info">Şu anda onay bekleyen randevu bulunmuyor.</div>
    }
    else
    {
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Tarih & Saat</th>
                    <th>Üye (Müşteri)</th>
                    <th>Eğitmen</th>
                    <th>İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.BekleyenRandevular)
                {
                    <tr>
                        <td>@item.TarihSaat.ToString("dd.MM.yyyy HH:mm")</td>
                        <td>
                            @item.Uye?.UserName <br />
                            <small class="text-muted">@item.Uye?.Email</small>
                        </td>
                        <td>@item.Antrenor?.AdSoyad</td>
                        <td>
                            <div class="btn-group" role="group">
                                <form method="post" asp-page-handler="Onayla" asp-route-id="@item.Id" class="me-2">
                                    <button type="submit" class="btn btn-success btn-sm">
                                        Onayla
                                    </button>
                                </form>
                                <form method="post" asp-page-handler="Reddet" asp-route-id="@item.Id">
                                    <button type="submit" class="btn btn-danger btn-sm">
                                        Reddet
                                    </button>
                                </form>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>