@page
@model web.Pages.Admin.RandevularModel
@{
    ViewData["Title"] = "Randevu Yönetimi";
    Layout = "_Layout";
}

<div class="container py-5 mt-5">

    <div class="mb-4">
        <h1 class="display-6 fw-bold text-white">Randevu Talepleri</h1>
        <p class="text-muted">Onay bekleyen üye randevularını buradan yönetebilirsiniz.</p>
    </div>

    <div class="card bg-dark border-secondary shadow-lg">
        <div class="card-body p-0">

            @if (Model.BekleyenRandevular.Count == 0)
            {
                <div class="text-center py-5">
                    <div class="mb-3">
                        <span class="material-symbols-outlined fs-1 text-success bg-success bg-opacity-10 p-3 rounded-circle border border-success">check_circle</span>
                    </div>
                    <h4 class="text-white">Harika!</h4>
                    <p class="text-muted">Şu an onay bekleyen yeni bir randevu talebi bulunmuyor.</p>
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-dark table-hover align-middle mb-0">
                        <thead class="bg-black bg-opacity-25">
                            <tr>
                                <th class="py-3 ps-4 text-secondary text-uppercase fs-7">Tarih & Saat</th>
                                <th class="py-3 text-secondary text-uppercase fs-7">Üye Bilgisi</th>
                                <th class="py-3 text-secondary text-uppercase fs-7">Talep Edilen Eğitmen</th>
                                <th class="py-3 pe-4 text-end text-secondary text-uppercase fs-7">Aksiyon</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.BekleyenRandevular)
                            {
                                <tr>
                                    <td class="ps-4">
                                        <div class="d-flex flex-column">
                                            <span class="fw-bold text-white fs-5">@item.TarihSaat.ToString("HH:mm")</span>
                                            <span class="text-muted small">@item.TarihSaat.ToString("dd MMM yyyy")</span>
                                        </div>
                                    </td>

                                    <td>
                                        <div class="d-flex align-items-center gap-3">
                                            <div class="rounded-circle bg-warning bg-opacity-10 text-warning d-flex align-items-center justify-content-center fw-bold border border-warning" style="width: 40px; height: 40px;">
                                                @(item.Uye?.UserName?.Substring(0, 1).ToUpper() ?? "U")
                                            </div>
                                            <div>
                                                <div class="fw-bold text-white">@item.Uye?.UserName</div>
                                                <div class="text-muted small" style="font-size: 0.8rem;">@item.Uye?.Email</div>
                                            </div>
                                        </div>
                                    </td>

                                    <td>
                                        <span class="badge bg-primary bg-opacity-25 text-primary border border-primary px-3 py-2">
                                            <i class="bi bi-person-badge me-1"></i> @item.Antrenor?.AdSoyad
                                        </span>
                                    </td>

                                    <td class="pe-4 text-end">
                                        <div class="d-flex justify-content-end gap-2">
                                            <form method="post" asp-page-handler="Onayla" asp-route-id="@item.Id">
                                                <button type="submit" class="btn btn-success btn-sm d-flex align-items-center gap-1" title="Onayla">
                                                    <span class="material-symbols-outlined fs-6">check</span> <span class="d-none d-md-inline">Onayla</span>
                                                </button>
                                            </form>

                                            <form method="post" asp-page-handler="Reddet" asp-route-id="@item.Id">
                                                <button type="submit" class="btn btn-outline-danger btn-sm d-flex align-items-center gap-1" title="Reddet">
                                                    <span class="material-symbols-outlined fs-6">close</span> <span class="d-none d-md-inline">Reddet</span>
                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>

    <div class="mt-4">
        <a asp-page="/Admin/Index" class="text-muted text-decoration-none small">
            <i class="bi bi-arrow-left"></i> Yönetim Paneline Dön
        </a>
    </div>
</div>