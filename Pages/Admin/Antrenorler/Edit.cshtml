@page
@model web.Pages.Admin.Antrenorler.EditModel

@{
    ViewData["Title"] = "Antrenör Düzenle";
}

<div class="container py-5 mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">

            <div class="card bg-dark border-secondary shadow-lg">
                <div class="card-header bg-warning bg-opacity-10 border-warning py-3">
                    <h4 class="m-0 text-warning"><i class="bi bi-pencil-square me-2"></i>Antrenör Bilgilerini Düzenle</h4>
                </div>

                <div class="card-body p-4">
                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                        <input type="hidden" asp-for="Antrenor.Id" />

                        <div class="mb-3">
                            <label asp-for="Antrenor.AdSoyad" class="form-label text-secondary small text-uppercase fw-bold">Ad Soyad</label>
                            <input asp-for="Antrenor.AdSoyad" class="form-control bg-black text-white border-secondary" />
                            <span asp-validation-for="Antrenor.AdSoyad" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Antrenor.Uzmanlik" class="form-label text-secondary small text-uppercase fw-bold">Uzmanlık Alanı</label>
                            <input asp-for="Antrenor.Uzmanlik" class="form-control bg-black text-white border-secondary" />
                            <span asp-validation-for="Antrenor.Uzmanlik" class="text-danger small"></span>
                        </div>

                        <div class="row g-3 mb-3">
                            <div class="col-md-6">
                                <label asp-for="Antrenor.MesaiBaslangic" class="form-label text-secondary small text-uppercase fw-bold">Mesai Başlangıç</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-secondary text-white border-secondary"><i class="bi bi-clock"></i></span>
                                    <input asp-for="Antrenor.MesaiBaslangic" class="form-control bg-black text-white border-secondary" type="time" />
                                </div>
                                <span asp-validation-for="Antrenor.MesaiBaslangic" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Antrenor.MesaiBitis" class="form-label text-secondary small text-uppercase fw-bold">Mesai Bitiş</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-secondary text-white border-secondary"><i class="bi bi-clock-history"></i></span>
                                    <input asp-for="Antrenor.MesaiBitis" class="form-control bg-black text-white border-secondary" type="time" />
                                </div>
                                <span asp-validation-for="Antrenor.MesaiBitis" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Antrenor.SporSalonuId" class="form-label text-secondary small text-uppercase fw-bold">Görevli Olduğu Salon</label>
                            <select asp-for="Antrenor.SporSalonuId" class="form-select bg-black text-white border-secondary" asp-items="ViewBag.SporSalonuId"></select>
                            <span asp-validation-for="Antrenor.SporSalonuId" class="text-danger small"></span>
                        </div>

                        <div class="d-flex justify-content-between align-items-center mt-4 border-top border-secondary pt-3">
                            <a asp-page="./Index" class="btn btn-outline-secondary text-light">
                                <i class="bi bi-arrow-left"></i> İptal
                            </a>
                            <button type="submit" class="btn btn-warning text-dark fw-bold px-4">
                                <i class="bi bi-save"></i> Değişiklikleri Kaydet
                            </button>
                        </div>
                    </form>
                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}