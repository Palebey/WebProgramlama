@page
@model web.Pages.Admin.Antrenorler.IndexModel

@{
    ViewData["Title"] = "Antrenör Yönetimi";
}

<div class="container py-5 mt-5">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="display-6 fw-bold text-white">Antrenör Listesi</h1>
            <p class="text-muted">Sistemdeki eğitmenleri buradan yönetebilirsiniz.</p>
        </div>
        <a asp-page="Create" class="btn btn-success d-flex align-items-center gap-2 px-4">
            <span class="material-symbols-outlined">add</span> Yeni Antrenör Ekle
        </a>
    </div>

    <div class="card bg-dark border-secondary shadow-lg">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-dark table-hover align-middle mb-0">
                    <thead class="bg-black bg-opacity-25">
                        <tr>
                            <th class="py-3 ps-4 text-secondary text-uppercase fs-7">Ad Soyad</th>
                            <th class="py-3 text-secondary text-uppercase fs-7">Uzmanlık</th>
                            <th class="py-3 text-secondary text-uppercase fs-7">Çalışma Saatleri</th>
                            <th class="py-3 text-secondary text-uppercase fs-7">Spor Salonu</th>
                            <th class="py-3 pe-4 text-end text-secondary text-uppercase fs-7">İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Antrenor != null && Model.Antrenor.Any())
                        {
                            @foreach (var item in Model.Antrenor)
                            {
                                <tr>
                                    <td class="ps-4">
                                        <div class="d-flex align-items-center gap-3">
                                            <div class="rounded-circle bg-primary bg-opacity-25 text-primary d-flex align-items-center justify-content-center fw-bold" style="width: 40px; height: 40px;">
                                                @(item.AdSoyad?.Length > 0 ? item.AdSoyad.Substring(0, 1).ToUpper() : "?")
                                            </div>
                                            <span class="fw-bold text-white">@Html.DisplayFor(modelItem => item.AdSoyad)</span>
                                        </div>
                                    </td>
                                    <td>
                                        <span class="badge bg-secondary bg-opacity-25 text-info border border-secondary">
                                            @Html.DisplayFor(modelItem => item.Uzmanlik)
                                        </span>
                                    </td>
                                    <td>
                                        <div class="text-muted small d-flex align-items-center gap-1">
                                            <span class="material-symbols-outlined fs-6">schedule</span>
                                            @item.MesaiBaslangic - @item.MesaiBitis
                                        </div>
                                    </td>
                                    <td>
                                        @if (item.SporSalonu != null)
                                        {
                                            <span class="text-white small">@item.SporSalonu.Ad</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted fst-italic small">Atanmamış</span>
                                        }
                                    </td>
                                    <td class="pe-4 text-end">
                                        <div class="btn-group" role="group">
                                            <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-warning" title="Düzenle">
                                                <span class="material-symbols-outlined fs-6 align-middle">edit</span>
                                            </a>
                                            <a asp-page="./Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info" title="Detaylar">
                                                <span class="material-symbols-outlined fs-6 align-middle">visibility</span>
                                            </a>
                                            <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger" title="Sil">
                                                <span class="material-symbols-outlined fs-6 align-middle">delete</span>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="5" class="text-center py-5 text-muted">
                                    <span class="material-symbols-outlined fs-1 d-block mb-2">person_off</span>
                                    Henüz kayıtlı antrenör bulunmamaktadır.
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="mt-3">
        <a asp-page="../Index" class="text-muted text-decoration-none small">
            <i class="bi bi-arrow-left"></i> Yönetim Paneline Dön
        </a>
    </div>
</div>