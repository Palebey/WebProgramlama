@page
@model web.Pages.Admin.Antrenorler.DetailsModel

@{
    ViewData["Title"] = "Antrenör Detayı";
}

<div class="container py-5 mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-6">

            <div class="card bg-dark border-secondary shadow-lg">
                <div class="card-header border-secondary p-4 text-center bg-black bg-opacity-25">
                    <div class="rounded-circle bg-success bg-opacity-25 text-success border border-success mx-auto mb-3 d-flex align-items-center justify-content-center fw-bold display-4" style="width: 100px; height: 100px;">
                        @(Model.Antrenor.AdSoyad?.Substring(0, 1).ToUpper() ?? "A")
                    </div>
                    <h2 class="text-white mb-0">@Html.DisplayFor(model => model.Antrenor.AdSoyad)</h2>
                    <span class="badge bg-secondary mt-2">ID: @Model.Antrenor.Id</span>
                </div>

                <div class="card-body p-4">
                    <ul class="list-group list-group-flush rounded border border-secondary">

                        <li class="list-group-item bg-dark text-white border-secondary d-flex justify-content-between align-items-center p-3">
                            <span class="text-secondary small text-uppercase fw-bold">Uzmanlık</span>
                            <span class="badge bg-info text-dark">@Html.DisplayFor(model => model.Antrenor.Uzmanlik)</span>
                        </li>

                        <li class="list-group-item bg-dark text-white border-secondary d-flex justify-content-between align-items-center p-3">
                            <span class="text-secondary small text-uppercase fw-bold">Mesai Saatleri</span>
                            <div class="text-white">
                                <i class="bi bi-clock me-1 text-warning"></i>
                                @Html.DisplayFor(model => model.Antrenor.MesaiBaslangic) - @Html.DisplayFor(model => model.Antrenor.MesaiBitis)
                            </div>
                        </li>

                        <li class="list-group-item bg-dark text-white border-secondary d-flex justify-content-between align-items-center p-3">
                            <span class="text-secondary small text-uppercase fw-bold">Spor Salonu</span>
                            <span class="text-white fw-bold">
                                <i class="bi bi-geo-alt me-1 text-danger"></i>
                                @(Model.Antrenor.SporSalonu != null ? "Salon ID: " + Model.Antrenor.SporSalonu.Id : "Atanmamış")
                            </span>
                        </li>
                    </ul>
                </div>

                <div class="card-footer bg-black bg-opacity-25 border-secondary p-3 d-flex justify-content-between">
                    <a asp-page="./Index" class="btn btn-outline-light btn-sm">
                        <i class="bi bi-arrow-left"></i> Geri Dön
                    </a>
                    <a asp-page="./Edit" asp-route-id="@Model.Antrenor.Id" class="btn btn-warning btn-sm fw-bold">
                        <i class="bi bi-pencil-square"></i> Profili Düzenle
                    </a>
                </div>
            </div>

        </div>
    </div>
</div>