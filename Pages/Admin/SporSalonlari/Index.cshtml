@page
@model web.Pages.Admin.SporSalonlari.IndexModel

@{
    ViewData["Title"] = "Spor Salonları";
}

<div class="container py-5 mt-5">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="display-6 fw-bold text-white">Spor Salonları</h1>
            <p class="text-muted">Sistemdeki şubeleri ve detaylarını buradan yönetin.</p>
        </div>
        <a asp-page="Create" class="btn btn-primary d-flex align-items-center gap-2 px-4 shadow-sm">
            <span class="material-symbols-outlined">add_business</span> Yeni Salon Ekle
        </a>
    </div>

    <div class="card bg-dark border-secondary shadow-lg">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-dark table-hover align-middle mb-0">
                    <thead class="bg-black bg-opacity-25">
                        <tr>
                            <th class="py-3 ps-4 text-secondary text-uppercase fs-7">Salon Adı</th>
                            <th class="py-3 text-secondary text-uppercase fs-7">Hizmetler</th>
                            <th class="py-3 text-secondary text-uppercase fs-7">Çalışma Saatleri</th>
                            <th class="py-3 text-secondary text-uppercase fs-7">Üyelik Ücreti</th>
                            <th class="py-3 pe-4 text-end text-secondary text-uppercase fs-7">İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.SporSalonu != null && Model.SporSalonu.Any())
                        {
                            @foreach (var item in Model.SporSalonu)
                            {
                                <tr>
                                    <td class="ps-4" style="max-width: 250px;">
                                        <div class="fw-bold text-white fs-6">@Html.DisplayFor(modelItem => item.Ad)</div>
                                        <div class="text-muted small text-truncate" title="@item.Aciklama">
                                            @item.Aciklama
                                        </div>
                                    </td>

                                    <td style="max-width: 200px;">
                                        <span class="text-white small text-truncate d-block">@Html.DisplayFor(modelItem => item.Hizmetler)</span>
                                    </td>

                                    <td>
                                        <div class="d-flex align-items-center text-muted small gap-1">
                                            <span class="material-symbols-outlined fs-6">schedule</span>
                                            @item.AcilisSaati - @item.KapanisSaati
                                        </div>
                                    </td>

                                    <td>
                                        <span class="badge bg-success bg-opacity-25 text-success border border-success px-2 py-1">
                                            @item.UyelikUcreti ₺ / Ay
                                        </span>
                                    </td>

                                    <td class="pe-4 text-end">
                                        <div class="btn-group" role="group">
                                            <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-warning" title="Düzenle">
                                                <span class="material-symbols-outlined fs-6 align-middle">edit</span>
                                            </a>
                                            <a asp-page="./Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info" title="Detaylar">
                                                <span class="material-symbols-outlined fs-6 align-middle">visibility</span>
                                            </a>
                                            <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger" title="Sil">
                                                <span class="material-symbols-outlined fs-6 align-middle">delete</span>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="5" class="text-center py-5 text-muted">
                                    <span class="material-symbols-outlined fs-1 d-block mb-2">storefront</span>
                                    Henüz kayıtlı bir spor salonu bulunmamaktadır.
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="mt-4">
        <a asp-page="/Admin/Index" class="text-muted text-decoration-none small">
            <i class="bi bi-arrow-left"></i> Yönetim Paneline Dön
        </a>
    </div>
</div>