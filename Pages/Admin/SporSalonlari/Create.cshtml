@page
@model web.Pages.Admin.SporSalonlari.CreateModel

@{
    ViewData["Title"] = "Yeni Salon Ekle";
}

<div class="container py-5 mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">

            <div class="card bg-dark border-secondary shadow-lg">
                <div class="card-header bg-black bg-opacity-25 border-secondary py-3">
                    <h4 class="m-0 text-white"><i class="bi bi-plus-circle me-2"></i>Yeni Spor Salonu Ekle</h4>
                </div>

                <div class="card-body p-4">
                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="mb-3">
                            <label asp-for="SporSalonu.Ad" class="form-label text-secondary small text-uppercase fw-bold">Salon Adı</label>
                            <input asp-for="SporSalonu.Ad" class="form-control bg-black text-white border-secondary" placeholder="Örn: FitLife Kadıköy" />
                            <span asp-validation-for="SporSalonu.Ad" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="SporSalonu.Aciklama" class="form-label text-secondary small text-uppercase fw-bold">Açıklama</label>
                            <textarea asp-for="SporSalonu.Aciklama" class="form-control bg-black text-white border-secondary" rows="3" placeholder="Salon hakkında kısa bilgi..."></textarea>
                            <span asp-validation-for="SporSalonu.Aciklama" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="SporSalonu.Hizmetler" class="form-label text-secondary small text-uppercase fw-bold">Hizmetler</label>
                            <input asp-for="SporSalonu.Hizmetler" class="form-control bg-black text-white border-secondary" placeholder="Örn: Havuz, Sauna, Pilates..." />
                            <span asp-validation-for="SporSalonu.Hizmetler" class="text-danger small"></span>
                        </div>

                        <div class="row g-3 mb-4">
                            <div class="col-md-4">
                                <label asp-for="SporSalonu.AcilisSaati" class="form-label text-secondary small text-uppercase fw-bold">Açılış Saati</label>
                                <input asp-for="SporSalonu.AcilisSaati" class="form-control bg-black text-white border-secondary" type="time" />
                                <span asp-validation-for="SporSalonu.AcilisSaati" class="text-danger small"></span>
                            </div>
                            <div class="col-md-4">
                                <label asp-for="SporSalonu.KapanisSaati" class="form-label text-secondary small text-uppercase fw-bold">Kapanış Saati</label>
                                <input asp-for="SporSalonu.KapanisSaati" class="form-control bg-black text-white border-secondary" type="time" />
                                <span asp-validation-for="SporSalonu.KapanisSaati" class="text-danger small"></span>
                            </div>
                            <div class="col-md-4">
                                <label asp-for="SporSalonu.UyelikUcreti" class="form-label text-success small text-uppercase fw-bold">Üyelik Ücreti (₺)</label>
                                <div class="input-group">
                                    <input asp-for="SporSalonu.UyelikUcreti" class="form-control bg-black text-white border-secondary" type="number" step="0.01" />
                                    <span class="input-group-text bg-secondary text-white border-secondary">₺</span>
                                </div>
                                <span asp-validation-for="SporSalonu.UyelikUcreti" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="d-flex justify-content-between align-items-center mt-4 border-top border-secondary pt-3">
                            <a asp-page="Index" class="btn btn-outline-secondary text-light">
                                <i class="bi bi-arrow-left"></i> Listeye Dön
                            </a>
                            <button type="submit" class="btn btn-success px-4">
                                <i class="bi bi-check-lg"></i> Kaydet
                            </button>
                        </div>
                    </form>
                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}