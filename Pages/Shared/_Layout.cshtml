<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SporSalonları</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Spline+Sans:wght@300;400;600;700&family=Noto+Sans:wght@400;500;700&display=swap" rel="stylesheet">

    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined" rel="stylesheet" />

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body class="bg-dark text-light">

    <header>
        <nav class="navbar navbar-expand-lg navbar-dark fixed-top border-bottom border-secondary" style="background-color: rgba(15, 23, 42, 0.95); backdrop-filter: blur(10px);">
            <div class="container">
                <a class="navbar-brand d-flex align-items-center gap-2" asp-area="" asp-page="/Index">
                   
                    <span style="font-family: 'Spline Sans', sans-serif; font-weight: 700;">SporSalon</span>
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto gap-2 gap-lg-4 align-items-center">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Index">Ana Sayfa</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/SporSalonus/Index">Spor Salonları</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Planım</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Görselleştirici</a>
                        </li>
                        <li class="nav-item d-none d-lg-block border-start border-secondary ps-4 ms-2">
                            <div class="d-flex align-items-center text-muted small">
                                <span class="material-symbols-outlined me-1 fs-5">account_circle</span>
                                <span>Öğrenci</span>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <main role="main">
        @RenderBody()
    </main>

    <footer class="py-5 border-top border-secondary mt-auto bg-black text-light" style="position: relative; z-index: 10;">
       

         
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>